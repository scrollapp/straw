{
	"compilerOptions": {
		"outFile": "+build/straw.debug.js",
		"composite": true,
		"module": "system",
		"moduleResolution": "node",
		"target": "esnext",
		"inlineSourceMap": true,
		"inlineSources": true,
		"strict": true,
		"baseUrl": "./",
		"rootDir": ".",
		"declaration": true,
		"declarationMap": true,
		"stripInternal": true,
		"incremental": true,
		"preserveConstEnums": true,
		"lib": [
			"dom",
			"esnext",
			"esnext.array",
			"esnext.asynciterable"
		]
	},
	"include": [
		"node_modules/@scrollapp/rawjs/*.ts",
		"node_modules/@scrollapp/rawdom/*.ts",
		"node_modules/@scrollapp/fila-*/fila-*.ts",
		"core/**/*.ts",
		"core/**/*.tsx",
		"core/X.ts",
		"sample/**/*.ts",
		"sample/**/*.tsx"
	]
}
