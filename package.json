{
	"name": "strawjs",
	"author": "Paul Gordon",
	"description": "A static site generator for those who can't get enough of RawJS",
	"version": "1.2.1",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/squaresapp/straw"
	},
	"bugs": {
		"url": "https://github.com/squaresapp/straw/issues"
	},
	"main": "straw.js",
	"browser": "straw.js",
	"types": "straw.d.ts",
	"bin": "straw.js",
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"readme.md",
		"LICENSE.txt",
		"photon_rs.js",
		"photon_rs_bg.wasm",
		"typescript.d.ts",
		"typescript.js",
		"fila.d.ts",
		"fila.d.ts.map",
		"fila.min.js",
		"raw.min.js",
		"raw.d.ts",
		"straw.js",
		"straw.d.ts",
		"straw.d.ts.map",
		"straw.min.js"
	],
	"scripts": {
		"test": "exit 0",
		"serve": "vite  --port 6046 --cors",
		"bundle": "tsc -p tsconfig.release.json && terser ./build/straw.js > ./build/straw.min.js",
		"release": "npm run bundle && cd ./build && cp ../package.json ./package.json && np && cp ./package.json ../package.json"
	},
	"dependencies": {
		"@silvia-odwyer/photon-node": "^0.3.3",
		"@squaresapp/fila": "^2.0.6",
		"@squaresapp/rawjs": "^1.3.15",
		"linkedom": "^0.16.6"
	},
	"devDependencies": {
		"@types/node": "^20.10.2",
		"moduless": "^3.2.5",
		"typescript": "^5.3.3"
	}
}
