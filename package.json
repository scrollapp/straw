{
	"name": "strawjs",
	"author": "Paul Gordon",
	"description": "A static site generator for those who can't get enough of RawJS",
	"version": "1.0.6",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/scrollapp/straw"
	},
	"bugs": {
		"url": "https://github.com/scrollapp/straw/issues"
	},
	"main": "straw.js",
	"browser": "straw.js",
	"types": "straw.d.ts",
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"LICENSE.txt",
		"straw.js",
		"straw.d.ts",
		"straw.d.ts.map",
		"straw.min.js"
	],
	"scripts": {
		"test": "exit 0",
		"bundle": "tsc -p tsconfig.json && terser ./+build/straw.js > ./+build/straw.min.js",
		"release": "npm run bundle && cd ./+build && cp ../package.json ./package.json && np && cp ./package.json ../package.json"
	},
	"dependencies": {
		"@scrollapp/rawjs": "^1.3.3",
		"@silvia-odwyer/photon-node": "^0.3.3",
		"crc-32": "https://cdn.sheetjs.com/crc-32-latest/crc-32-latest.tgz",
		"fila-node": "^1.0.2",
		"happy-dom": "^12.10.3"
	},
	"devDependencies": {
		"@types/node": "^20.10.2"
	}
}
